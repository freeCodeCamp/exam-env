{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "dialog:default",
    "updater:default",
    "core:window:allow-destroy",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.freecodecamp.org"
        },
        {
          "url": "https://*.freecodecamp.dev"
        },
        {
          "url": "http://localhost:*"
        },
        {
          "url": "https://*.gitpod.io"
        },
        {
          "url": "https://freecodecamp-dev.auth0.com"
        },
        {
          "url": "https://auth.freecodecamp.dev"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://freecodecamp-dev.auth0.com/*"
        },
        {
          "url": "https://*.freecodecamp.dev/*"
        }
      ]
    }
  ]
}